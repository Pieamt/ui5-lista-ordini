<mvc:View controllerName="listaordini.controller.articoli.ListaArticoli"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.f">
  <f:DynamicPage showFooter="false">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>productListTitle}"/>
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
      <Panel>
        <l:Grid >
          <VBox >
            <Label text="{i18n>labelFilterProductCode}"
              design="Bold" />
            <SearchField value=""
              search="onSearch"
              maxLength="255"/>
            <layoutData>
              <l:GridData span="XL3 L5 M12 S12"/>
            </layoutData>
          </VBox>
          <VBox >
            <Label text="{i18n>labelFilterProductName}"
              design="Bold" />
            <SearchField value=""
              search="onSearch"
              maxLength="255"/>
            <layoutData>
              <l:GridData span="XL3 L5 M12 S12"/>
            </layoutData>
          </VBox>
          <HBox justifyContent="End"
            class="sapUiSmallMarginTop">
            <layoutData>
              <l:GridData span="XL1 L2 M12 S12"
                indent="L1"/>
            </layoutData>
          </HBox>
        </l:Grid>
        <Table id="tblArticoli"
          items="{
                  path: 'Articoli>/Data',
                  length: '10'
                }">
          <headerToolbar>
            <OverflowToolbar>
              <ToolbarSpacer/>
              <Button tooltip="{i18n>tooltipSort}"
                icon="sap-icon://sort"
                press="onSort"/>
              <Button text="{i18n>btnNew}"
                type="Emphasized"
                press="onNewProduct"/>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column id="id"
              headerMenu="columnHeaderMenu">
              <Text text="{i18n>labelNProduct}" />
            </Column>
            <Column id="lastname"
              minScreenWidth="Tablet"
              demandPopin="true">
              <Text text="{i18n>labelProduct}" />
            </Column>
            <Column minScreenWidth="Tablet"
              demandPopin="true">
              <Text text="{i18n>labelProductCost}" />
            </Column>
            <Column demandPopin="true">
              <Text text="{i18n>labelQuantityDisp}" />
            </Column>
            <Column hAlign="Center"
              width="3.5rem">
            </Column>
            <Column hAlign="Center"
              width="3.5rem">
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{Articoli>CodArticolo}"
                  wrapping="true" />
                <Text text="{Articoli>NomeArticolo}"
                  wrapping="true" />
                <ObjectNumber number="{path: 'Articoli>Importo', type: 'sap.ui.model.type.Float'}"
                  unit="â‚¬"
                  state="None"
                  hideUnitInPreview="false"/>
                <Text text="{Articoli>QuantitaDisp}"
                  wrapping="true" />
                <Button icon="sap-icon://edit"
                  type="Transparent"
                  tooltip="{i18n>tooltipEdit}"
                  press="onDetail"/>
                <Button icon="sap-icon://delete"
                  type="Transparent"
                  tooltip="{i18n>tooltipDelete}"
                  press="onDetail"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </Panel>
    </f:content>
  </f:DynamicPage>
</mvc:View>