<mvc:View controllerName="listaordini.controller.articoli.ListaArticoli"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:my="listaordini.controls"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.f">
  <f:DynamicPage showFooter="false">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>productListTitle}"/>
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
      <Panel>
        <l:Grid >
          <VBox >
            <Label text="{i18n>labelFilterProductCode}"
              design="Bold" />
            <SearchField value="{Filters>/CodArticolo}"
              search="onSearch"
              liveChange="onNumericSearch"
              maxLength="3"/>
            <layoutData>
              <l:GridData span="XL3 L5 M12 S12"/>
            </layoutData>
          </VBox>
          <VBox >
            <Label text="{i18n>labelFilterProductName}"
              design="Bold" />
            <SearchField value="{Filters>/NomeArticolo}"
              search="onSearch"
              maxLength="50"/>
            <layoutData>
              <l:GridData span="XL3 L5 M12 S12"/>
            </layoutData>
          </VBox>
        </l:Grid>
        <Table id="tblArticoli"
          items="{
                  path: 'Articoli>/Data',
                  length: 10
                }">
          <headerToolbar>
            <OverflowToolbar>
              <ToolbarSpacer/>
              <!-- <Button tooltip="{i18n>tooltipSort}" icon="sap-icon://sort" press="onSort"/> -->
              <Button text="{i18n>btnNew}"
                type="Emphasized"
                press="onNew"/>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column id="id"
              headerMenu="columnHeaderMenu">
              <Text text="{i18n>labelCodArticolo}" />
            </Column>
            <Column id="lastname"
              minScreenWidth="Tablet"
              demandPopin="true">
              <Text text="{i18n>labelNomeArticolo}" />
            </Column>
            <Column minScreenWidth="Tablet"
              demandPopin="true">
              <Text text="{i18n>labelImporto}" />
            </Column>
            <Column demandPopin="true">
              <Text text="{i18n>labelQuantitaDisp}" />
            </Column>
            <Column hAlign="Center"
              width="3.5rem">
            </Column>
            <Column hAlign="Center"
              width="3.5rem">
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{Articoli>CodArticolo}"
                  wrapping="true" />
                <Text text="{Articoli>NomeArticolo}"
                  wrapping="true" />
                <ObjectNumber number="{path: 'Articoli>Importo', type: 'sap.ui.model.type.Float'}"
                  unit="â‚¬"
                  state="None"
                  hideUnitInPreview="false"/>
                <Text text="{Articoli>QuantitaDisp}"
                  wrapping="true" />
                <Button icon="sap-icon://edit"
                  type="Transparent"
                  tooltip="{i18n>tooltipEdit}"
                  press="onEdit"/>
                <Button icon="sap-icon://delete"
                  type="Transparent"
                  tooltip="{i18n>tooltipDelete}"
                  press="onDelete"/>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        <OverflowToolbar class="sapUiTinyMarginTop">
          <ToolbarSpacer/>
          <my:Paginator id="tblPaginatorArticoli"
            top="{Articoli>/Top}"
            skip="{Articoli>/Skip}"
            records="{Articoli>/Count}"
            press="onPaginatorChange"/>
        </OverflowToolbar>
      </Panel>
    </f:content>
  </f:DynamicPage>
</mvc:View>