<core:FragmentDefinition xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table"
  xmlns:rowmodes="sap.ui.table.rowmodes">
  <Dialog title="{i18n>titleAggiungiArticoli}"
    contentWidth="60%"
    contentHeight="400px"
    resizable="true">
    <t:Table rows="{Articoli>/Data}"
      selectionMode="MultiToggle">
      <t:rowMode>
        <rowmodes:Fixed rowCount="10"/>
      </t:rowMode>
      <t:columns>
        <t:Column width="8rem">
          <Label text="{i18n>labelCodArticolo}"/>
          <t:template>
            <Text text="{Articoli>CodArticolo}"/>
          </t:template>
        </t:Column>
        <t:Column width="30rem">
          <Label text="{i18n>labelNomeArticolo}"/>
          <t:template>
            <Text text="{Articoli>NomeArticolo}"/>
          </t:template>
        </t:Column>
        <t:Column >
          <Label text="{i18n>labelCosto}"/>
          <t:template>
            <ObjectNumber number="{Articoli>Importo}"
              unit="â‚¬"/>
          </t:template>
        </t:Column>
      </t:columns>
    </t:Table>
    <beginButton>
      <Button text="{i18n>btnCancel}"
        press="onCloseAddDialog"/>
    </beginButton>
    <endButton>
      <Button text="{i18n>btnAdd}"
        type="Emphasized"
        press="onConfirmAddItems"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
